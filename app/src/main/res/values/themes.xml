<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C1E8FF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="OutlinedButton" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/system_neutral1_800</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:height">60dp</item>
      <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="OutlinedButtonInverse" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/system_accent1_100</item>
        <item name="android:background">@drawable/button_inverse</item>
        <item name="backgroundTint">@null</item>
        <item name="android:height">60dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>



</resources>